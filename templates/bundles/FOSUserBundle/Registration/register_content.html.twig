{% trans_default_domain 'FOSUserBundle' %}

<div class="containerSecurity img-back">
    <div class="signup-content register">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register signup-form register','id':'signup-form'}}) }}
        <h2 class="form-title register">Create account</h2>
        <div class="form-group register">
            {{ form_row(form.username, {'attr': {'class':'form-input register','id':'name','placeholder':'Your Name'}}) }}
        </div>
        <div class="form-group register">
            {{ form_row(form.email, {'attr': {'class':'form-input register','id':'email','placeholder':'Your Email'}}) }}
        </div>
        <div class="form-group register">
            {{ form_row(form.plainPassword.first, {'attr': {'class':'form-input register','id':'password','placeholder':'Password'}}) }}
        </div>
        <div class="form-group register">
            {{ form_row(form.plainPassword.second, {'attr': {'class':'form-input register','id':'password','placeholder':'Repeat your password'}}) }}
        </div>
        <div class="form-group">
            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term register"/>
            <label for="agree-term" class="label-agree-term register"><span><span></span></span>I agree all statements
                in <a
                        href="#" class="term-service register">Terms of service</a></label>
        </div>
        <div class="form-group">
            <div>
                <input type="submit" name="submit" id="submit" class="form-submit register"
                       value="{{ 'registration.submit'|trans }}"/>
                {{ form_end(form) }}
                <p class="loginhere">
                    Have already an account ? <a href="{{ path('fos_user_security_login') }}"
                                                 class="loginhere-link register">Login here</a>
                </p>
            </div>
        </div>
    </div>
</div>
